<section class="login">
  <!--<div class="background-overlay"></div>-->
  <div class="container-fluid" style="margin:0;padding:0;">
    <div class="row" style="margin:0;padding:0;">
      <div class="col-md-6 col-sm-12" style="padding:0;">
        <img class="poster" src="images/watch-poster9.jpg" width="100%">
      </div>
      <div class="col-md-6 col-sm-12" style="padding:0;">
        <div class="login-form">
          <h1 class="text-color-secondary text-center" style="margin-bottom:40px;">Login</h1>
          <form action="/api/login" method='POST'>
            <div class="form-group">
              <label for="username" class="col-md-2 offset-md-1 control-label">Username</label>
              <div class="col-md-10 offset-md-1">
                <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
              </div>
            </div>
            <div class="form-group" style="margin-bottom:40px;">
              <label for="password" class="col-md-2 offset-md-1 control-label">Password</label>
              <div class="col-md-10 offset-md-1">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-offset-2 col-md-12 text-center">
                <button type="submit" class="btn button-secondary">Login</button>
              </div>
            </div>
          </form>
          <hr class="text-color-secondary"/>
          <p class="text-center">Don't have an account? <a href="/register" class="text-color-secondary">Become a gentleman</a></p>
        </div>
      </div>
