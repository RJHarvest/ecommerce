<section class="shop">
  <div class="containter-fluid">
    <div class="row" style="margin:0;padding:0;">
      <div class="col-md-12" style="margin-bottom:60px;padding:0;">
        <img src="../../images/watch-poster7.png" width="100%" />
      </div>
      <div class="col-md-12 text-center" style="margin-bottom:80px;">
        <h6 class="text-color-secondary">lorem ipsum</h6>
        <h1><%= category %></h1>
      </div>
      <div class="col-md-3 col-sm-12">
        <div class="watch-menu">
          <h3 class="title">Collections</h3>
          <a href="#">All Watches</a>
          <a href="#">Best Sellers</a>
          <a href="#">Most Popular</a>
          <a href="#">Limited Edition</a>
        </div>
      </div>
      <div class="col-md-9 col-sm-12">
        <div class="row">
        <% for (let i = 0; i < product.length; i++) { %>
          <div class="col-md-4 col-sm-6">
            <div class="shop-items text-center">
              <a class="image" href="/watch/details/<%= product[i]._id %>"><img src="../../images/upload/<%= product[i].image %>" width="100%" /></a>
              <p class="subheading text-muted"><%= product[i].brand %></p>
              <a class="name" href="/watch/details/<%= product[i]._id %>"><h4><%= product[i].name %></h4></a>
              <h5 class="text-color-secondary">HK$<%= product[i].price %></h5>
              <button class="add-to-cart btn button-secondary" data-id="<%= product[i]._id %>" data-quantity="1" style="margin-top:40px;">Add To Cart</button>
            </div>
          </div>
        <% } %>
        </div>
      </div>
    </div>
  </div>
</section>

<% include shared %>
